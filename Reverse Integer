void reverse(int arr[], int n){
    int s = 0;
    int e = n-1;
    while(s<=e){
        swap(arr[s], arr[e]);
        s++;
        e--;
        
    } 
}

void printArray(int arr[], int n){
    for(int i=0; i<n; i++){
        cout<<arr[i]<<" ";
    }
    cout<<endl;
    
    
}



int main(){
    int err[6] = {1, -1,2,3,-8,9};
    int orr[5] = {1,-9,25,54,21};
    reverse(err , 6);
    reverse(orr , 5);
    printArray(err,6);
    printArray(orr,5);
    
    return 0;
}
