#include <iostream>
using namespace std;
//1234 : 1000

int main()
{
    int n, f, l , s;
    
   cout<<"enter the 4 digit number: "<<endl;
   cin>>n;
   
   f = n/1000;
   l = n%10;
   s = (n/100) % 10;
   cout<<"first"<<f<<endl;
   cout<<"last: "<<l<<endl;
   cout<<"second: "<<s<<endl;
   

    return 0;
}

n/ (jitne no. ki digit ho here 4 digt 1000): quotient milega means age ki digit
last = jonse bhi place ki like 10s place ki to % remainder
