// simple calculator
#include <stdio.h>
#include <math.h>
#include<iostream>

using namespace std;

int main()
{
    int a,b;
    cout<<"enter the value of a"<<endl;
    cin>>a;
    
    cout<<"enter the value of b"<<endl;
    cin>>b;
    
    char op;
    cout<<"enter the valid operator"<<endl;
    cin>>op;
    
    switch(op){
        
        case '+' : cout<<"the sum of given numbers is : "<< (a+b)<<endl;
        break;
        
        
        case '-' : cout<<"the difference of given numbers is : "<< (a-b)<<endl;
        break;
        
        case '*' : cout<<"the product of given numbers is : "<< (a*b)<<endl;
        break;

       case '/' : cout<<"the division of given number is : "<< (a/b)<<endl;
        break;
        
        case '%' : cout<<"the mod of given number is : "<< (a%b)<<endl;
        break;

        default :  cout<<"Invalid operator entered"<<endl;

    }
    Return 0;
}
